<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/list_item_genre_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_toRightOf="@+id/list_item_genre_icon"
        android:id="@+id/list_item_genre_name"
        android:layout_width="160dp"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:layout_alignBaseline="@+id/list_item_genre_icon"
        android:layout_marginLeft="10dp"
        tools:text="Title" />

    <RatingBar
        android:id="@+id/avaliacaoStar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:rating="3.0"
        android:backgroundTint="@color/colorBtnCancelar"
        android:isIndicator="true"
        android:numStars="5"
        android:stepSize="0.1"
        android:layout_marginRight="28dp"
        android:layout_marginEnd="28dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/list_item_genre_arrow"
        android:layout_toStartOf="@+id/list_item_genre_arrow" />

    <ImageView
        android:id="@+id/list_item_genre_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_arrow_down" />

</RelativeLayout>